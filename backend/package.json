{
  "name": "promoteur-backend",
  "version": "1.0.0",
  "description": "Backend API pour l'application Promoteur Immobilier Pro",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc && npm run migrate:build",
    "start": "npm run migrate:prod && node dist/server.js",
    "migrate": "node dist/scripts/migrate.js",
    "migrate:build": "tsc src/scripts/migrate.ts --outDir dist/scripts --target es2020 --module commonjs --esModuleInterop true --allowSyntheticDefaultImports true --strict true --skipLibCheck true",
    "migrate:prod": "node dist/scripts/migrate.js || echo 'Migration completed or skipped'",
    "migrate:declared-amounts": "ts-node src/scripts/run-migration.ts",
    "migrate:expense-refactor": "ts-node src/scripts/run-expense-refactor-migration.ts",
    "fix:payment-method": "ts-node src/scripts/fix-payment-method.ts",
    "verify:schema": "ts-node src/scripts/verify-schema.ts",
    "seed": "node dist/scripts/seed.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/utils",
    "test:integration": "jest tests/integration"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "winston": "^3.18.1",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
